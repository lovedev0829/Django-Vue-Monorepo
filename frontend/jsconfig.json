{
  "include": [
    "./vite.config.*",
    "./**/*",
    "./**/*.vue",
    "./themeConfig.js"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@layouts/*": [
        "./@layouts/*"
      ],
      "@layouts": [
        "./@layouts"
      ],
      "@core/*": [
        "./@core/*"
      ],
      "@core": [
        "./@core"
      ],
      "@images/*": [
        "./assets/images/*"
      ],
      "@styles/*": [
        "./styles/*"
      ]
    },
    "types": [
      "vite/client",
      "vite-plugin-vue-layouts/client"
    ]
  }
}
